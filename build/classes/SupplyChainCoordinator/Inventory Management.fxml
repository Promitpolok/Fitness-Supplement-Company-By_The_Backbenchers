<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #0598ff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SupplyChainCoordinator.InventoryManagementController">
   <children>
      <Button layoutX="22.0" layoutY="23.0" mnemonicParsing="false" onAction="#BackButtonOnMouseClick" prefHeight="31.0" prefWidth="73.0" text="Back">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="210.0" layoutY="84.0" mnemonicParsing="false" onAction="#StoreProductRecordsButtonOnMouseClick" prefHeight="31.0" prefWidth="180.0" text="Store Product Records">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ComboBox fx:id="selectProductComboBox" layoutX="22.0" layoutY="84.0" prefWidth="150.0" promptText="Select Product" />
      <Button layoutX="412.0" layoutY="84.0" mnemonicParsing="false" onAction="#ViewProductDetailsButtonOnMouseClick" prefHeight="31.0" prefWidth="180.0" text="View Product Details">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <TextArea fx:id="productRecordsTextArea" layoutY="200.0" prefHeight="200.0" prefWidth="600.0" text="Product Records">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextArea>
   </children>
</AnchorPane>
